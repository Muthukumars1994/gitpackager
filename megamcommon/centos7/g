#!/bin/sh

mkdir -p ./usr/share/megam

fpm -s dir -t rpm -n megamcommon -v 0.1 --after-install ./postinst --after-remove ./postrm --before-remove ./prerm --license "Apache" --vendor "Megam Systems" --maintainer "<info@megam.io>" --url "https://www.megam.io" --description "Megam common an empty package which just creates an user megam and group megam." ./usr/share/megam

