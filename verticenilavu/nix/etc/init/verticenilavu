description "Vertice portal"
author "Megam Systems(https://www.megam.io)"

# When to start the servicee
start on runlevel [2345]
start on (started networking)
start on (local-filesystems)

# When to stop the service
stop on runlevel [016]
stop on (stopping networking)
stop on (stopped verticenilavu)

# Automatically restart process if crashed. Tries 0 times every 60 seconds
respawn

expect stop

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/megam/verticenilavu/verticenilavu.log
     /var/lib/megam/env.sh
end script

script
    cd /usr/share/megam/verticenilavu
    bundle exec passenger start -a 127.0.0.1 -p 8080 -d -e production
end script

post-stop script
    cd /usr/share/megam/verticenilavu
    exec passenger stop --pid-file passenger.8080.pid >> /var/log/megam/verticenilavu/verticenilavu.log 2>&1
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/megam/verticenilavu/verticenilavu.log
end script
