#!/bin/sh
# postinst script for riak
#
# see: dh_installdeb(1)

set -e

# install startup script
update-rc.d riak defaults >/dev/null

# create group
if ! getent group riak >/dev/null; then
        addgroup --system riak
fi

# create user
if ! getent passwd riak >/dev/null; then
        adduser --ingroup riak \
                --home /var/lib/riak \
                --disabled-password \
                --system --shell /bin/bash --no-create-home \
                --gecos "Riak user" riak
fi

for i in lib run log; do
    chown -R riak:riak /var/$i/riak
done

chown -R riak:riak /usr/lib/riak
chown -R riak:riak /etc/riak

chmod 0755 /var/run/riak /etc/riak
chmod 0644 /etc/riak/*
chmod -R +X /etc/riak
chmod 0755 /usr/lib/riak/lib/env.sh
chmod 0755 /usr/lib/riak/erts-*/bin/nodetool

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

ip(){
    while read Iface Destination Gateway Flags RefCnt Use Metric Mask MTU Window IRTT; do
        [ "$Mask" = "00000000" ] && \
        interface="$Iface" && \
        ipaddr=$(LC_ALL=C /sbin/ip -4 addr list dev "$interface" scope global) && \
        ipaddr=${ipaddr#* inet } && \
        ipaddr=${ipaddr%%/*} && \
        break
    done < /proc/net/route
}
ip

sed -i "s/^[ \t]*storage_backend .*/storage_backend = leveldb/" /etc/riak/riak.conf

sed -i "s/^[ \t]*listener.http.internal =.*/listener.http.internal = $ipaddr:8098/" /etc/riak/riak.conf

sed -i "s/^[ \t]*listener.protobuf.internal =.*/listener.protobuf.internal = $ipaddr:8087/" /etc/riak/riak.conf

exit 0
