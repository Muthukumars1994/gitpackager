
description "Megam Chef native"
author "Thomas Alrin <alrin@megam.co.in>"

# When to start the service
start on runlevel [2345]
start on (started networking)

# When to stop the service
stop on runlevel [016]
stop on (stopping networking)
stop on (stopped megamd)

# Automatically restart process if crashed. Tries 0 times every 60 seconds
respawn
respawn limit 0 60

# set the working directory of the job processes
chdir /usr/share/megam/megamchefnative


# start the cibd seed
script
  echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) megamchefnative starting" >> /var/log/megam/megamchefnative/megamchefnative.log
  exec ./bin/goiardi >> /var/log/megam/megamchefnative/megamchefnative.log 2>&1
end script

post-start script
    PID=`status megamchefnative | egrep -oi '([0-9]+)$' | head -n1`
    echo $PID > /var/run/megam/megamchefnative/megamchefnative.pid
end script

post-stop script
    rm -f /var/run/megam/megamchefnative/megamchefnative.pid
end script
